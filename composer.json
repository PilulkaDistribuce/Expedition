{
    "name": "pilulka/expedition",
    "description": "Pilulka expedition calculator",
    "homepage": "https://www.pilulka.cz",
    "type": "library",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "Pilulka\\Expedition\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pilulka\\Expedition\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "7.1 - 8.0",
        "pilulka-distribuce/holiday-provider": "^0.1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpstan/phpstan": "*"
    },
    "scripts": {
        "unit": "vendor/bin/phpunit --configuration=phpunit.xml.dist",
        "stan": "vendor/bin/phpstan analyse src tests --level=8"
    }
}
